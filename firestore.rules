rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // This rule allows anyone with your Firestore database reference to view, edit,
    // and delete all data in your Firestore database. It is useful for getting
    // started, but it is configured to expire after 30 days because it
    // leaves your app open to attackers. At that time, all client
    // requests to your Firestore database will be denied.
    //
    // Make sure to write security rules for your app before that time, or else
    // all client requests to your Firestore database will be denied until you Update
    // your rules
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 5, 15);
    }

    // Submissions collection rules
    match /submissions/{document} {
      // Allow reading only approved submissions (for public gallery)
      allow read: if resource.data.status == 'approved';
      
      // Allow anyone to create new submissions (anonymous submissions)
      allow create: if request.auth == null 
                   && request.resource.data.keys().hasAll(['name', 'email', 'phone', 'location', 'images', 'status', 'createdAt'])
                   && request.resource.data.status == 'pending';
      
      // Allow updates and deletes for admin purposes (in practice, this will be handled by admin functions)
      // For now, allowing all authenticated updates/deletes for admin dashboard
      allow update, delete: if true; // This will be handled by your admin dashboard logic
    }
  }
}